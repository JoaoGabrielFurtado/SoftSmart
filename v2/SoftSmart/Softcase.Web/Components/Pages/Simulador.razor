@page "/simulador"
@using Softcase.Core
@using Softcase.Core.Classes
@using Softcase.ML
@using Softcase_ML
  
@rendermode InteractiveServer

<h3>🔮 Simulador de Ocupação - SoftCase AI</h3>
<p>Ajuste os cenários abaixo para ver a previsão da Inteligência Artificial.</p>

<div class="row" style="max-width: 600px;">
    <div class="col-md-6">
        <div class="mb-3">
            <label>Hora do Dia (@hora:00)</label>
            <input type="range" class="form-range" min="0" max="23" @bind="hora" @bind:event="oninput" />
        </div>

        <div class="mb-3">
            <label>Dia da Semana</label>
            <select class="form-select" @bind="diaSemana">
                <option value="1">Segunda-feira</option>
                <option value="2">Terça-feira</option>
                <option value="3">Quarta-feira</option>
                <option value="4">Quinta-feira</option>
                <option value="5">Sexta-feira</option>
                <option value="6">Sábado</option>
                <option value="0">Domingo</option>
            </select>
        </div>

        <div class="mb-3">
            <label>Temperatura (@temperatura °C)</label>
            <input type="range" class="form-range" min="0" max="40" @bind="temperatura" @bind:event="oninput" />
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" @bind="temChuva" id="checkChuva">
            <label class="form-check-label" for="checkChuva">Está Chovendo?</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" @bind="temEvento" id="checkEvento">
            <label class="form-check-label" for="checkEvento">Grande Evento na Região?</label>
        </div>

        <br />
        <button class="btn btn-primary w-100" @onclick="PreverOcupacao">Calcular Previsão</button>
    </div>

    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-header">
                Ocupação Prevista
            </div>
            <div class="card-body">
                <h1 class="display-4">@resultadoPrevisao.ToString("F0")</h1>
                <p>Vagas Ocupadas</p>

                <div class="progress">
                    <div class="progress-bar @corBarra" role="progressbar"
                         style="width: @(resultadoPrevisao)%;"
                         aria-valuenow="@resultadoPrevisao" aria-valuemin="0" aria-valuemax="250">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int hora = 12;
    private int diaSemana = 1; 
    private float temperatura = 25;
    private bool temChuva = false;
    private bool temEvento = false;

    private float resultadoPrevisao = 0;
    private string corBarra = "bg-success";

    private void PreverOcupacao()
    {
        var chuva = temChuva ? 1 : 0;
        var evento = temEvento ? 1 : 0;

        int previsao = ServicoDeIA.RetornaResultadoIA(hora, diaSemana, temperatura, chuva, evento, 0);

        resultadoPrevisao = previsao;

        // Logica barra
        if (resultadoPrevisao > 200) corBarra = "bg-danger"; 
        else if (resultadoPrevisao > 100) corBarra = "bg-warning"; 
        else corBarra = "bg-success"; 
    }
}